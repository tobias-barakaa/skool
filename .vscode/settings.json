{
  // Core theme and appearance
  "workbench.colorTheme": "Brogrammer",
  "workbench.iconTheme": "vs-seti",
  "workbench.productIconTheme": "material-product-icons",

  // Window and layout
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.panel.defaultLocation": "bottom",

  // Editor appearance
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Cascadia Code', Consolas, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.mouseWheelScrollSensitivity": 1,
  "editor.fastScrollSensitivity": 5,

  // Line numbers and gutter
  "editor.lineNumbers": "on",
  "editor.renderLineHighlight": "all",
  "editor.glyphMargin": true,
  "editor.folding": true,
  "editor.foldingStrategy": "indentation",
  "editor.showFoldingControls": "mouseover",

  // Minimap
  "editor.minimap.enabled": true,
  "editor.minimap.side": "right",
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,

  // Indentation and formatting
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  "editor.renderWhitespace": "selection",
  "editor.rulers": [80, 120],

  // Syntax highlighting and colors
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.indentation": true,

  // Search and suggestions
  "editor.find.autoFindInSelection": "multiline",
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.parameterHints.enabled": true,
  "editor.hover.enabled": true,
  "editor.hover.delay": 300,

  // File explorer
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,

  // Terminal
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Fira Code', 'Cascadia Code', Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.smoothScrolling": true,

  // Git integration
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.decorations.enabled": true,
  "gitlens.views.repositories.files.layout": "tree",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // Tab behavior
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabCloseButton": "right",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.scrollToSwitchTabs": true,

  // Command palette and search
  "workbench.commandPalette.history": 50,
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true
  },

  // Auto-save and file handling
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Format on save
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },

  // Language-specific settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },

  // IntelliSense and completions
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Performance and memory
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },

  // Zen mode and focus
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false,
  "zenMode.centerLayout": false,

  // Custom color overrides for Windsurf-like appearance
  "workbench.colorCustomizations": {
    "activityBar.background": "#1e1e1e",
    "activityBar.foreground": "#ffffff",
    "activityBar.inactiveForeground": "#ffffff60",
    "activityBarBadge.background": "#0078d4",
    "activityBarBadge.foreground": "#ffffff",
    "sideBar.background": "#000000",
    "sideBar.foreground": "#cccccc",
    "sideBarTitle.foreground": "#ffffff",
    "sideBarSectionHeader.background": "#2d2d30",
    "sideBarSectionHeader.foreground": "#ffffff",
    "editor.background": "#0f0e0e",
    "editor.foreground": "#d4d4d4",
    "editor.lineHighlightBackground": "#2a2a2a",
    "editor.selectionBackground": "#264f78",
    "editor.selectionHighlightBackground": "#add6ff26",
    "editorCursor.foreground": "#ffffff",
    "editorLineNumber.foreground": "#858585",
    "editorLineNumber.activeForeground": "#ffffff",
    "statusBar.background": "#007acc",
    "statusBar.foreground": "#ffffff",
    "statusBar.noFolderBackground": "#68217a",
    "statusBar.debuggingBackground": "#eb4e00",
    "tab.activeBackground": "#1e1e1e",
    "tab.activeForeground": "#ffffff",
    "tab.inactiveBackground": "#2d2d30",
    "tab.inactiveForeground": "#ffffff80",
    "terminal.background": "#1e1e1e",
    "terminal.foreground": "#d4d4d4",
    "panel.background": "#1e1e1e",
    "panel.border": "#2d2d30"
  }
}
